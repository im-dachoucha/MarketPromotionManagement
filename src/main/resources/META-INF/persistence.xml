<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>com.example.marketpromotionmanagement.entities.Admin</class>
        <class>com.example.marketpromotionmanagement.entities.Department</class>
        <class>com.example.marketpromotionmanagement.entities.Departmentmanager</class>
        <class>com.example.marketpromotionmanagement.entities.Promotion</class>
        <class>com.example.marketpromotionmanagement.entities.Store</class>
        <class>com.example.marketpromotionmanagement.entities.Storeadmin</class>
        <class>com.example.marketpromotionmanagement.entities.Subdepartment</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:32768/market_promotion"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="123"/>
        </properties>
    </persistence-unit>
</persistence>
